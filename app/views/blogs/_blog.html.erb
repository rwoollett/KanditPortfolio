
<article class="blog-post" id="<%= dom_id blog %>">
  <%= button_to "Delete", blog, method: :delete if logged_in?(:site_admin) %>
  <h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words blog.created_at, Time.now %> ago</p>
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to blog.status, toggle_status_blog_path(blog) %> / <%= link_to "Edit", edit_blog_path(blog) %>
    </p>
  <% end %>  

  <p>
    <%= blog.body %>
  </p>
</article>
