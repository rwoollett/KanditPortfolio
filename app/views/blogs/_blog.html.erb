<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
    <%= link_to "Show this blog", blog %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= link_to blog.status, toggle_status_blog_path(blog) %>
  </p>

</div>
