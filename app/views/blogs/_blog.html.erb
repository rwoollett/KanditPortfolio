<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title.upcase %>
    <%= link_to "Show this blog", blog %>
  </p>
  <p>
    <strong>Date:</strong>
    Published <%= distance_of_time_in_words blog.created_at, Time.now %> ago
  </p>
  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <p>
    <strong>Status:</strong>
    <% if logged_in?(:site_admin) %>
      <%= link_to blog.status, toggle_status_blog_path(blog)  %>
    <% else %>
      <%= blog.status %>
    <% end %>
  </p>

</div>
