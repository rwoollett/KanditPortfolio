<%= form_for(blog) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "Rodney Woollett Portfolio", time: 1800, stick: false) %>
    <% end %>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>

  <div class="mb-3">
    <%= form.text_area :body, class: "form-control", rows: 15, placeholder: "Content" %>
  </div>

  <div class="d-grid gap-2 mb-3">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
