<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_jquery %>

    <meta name="keywords" content="<%= @seo_keywords %>"/>
    <%= stylesheet_link_tag "portfolios", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <%= render "shared/portfolio_nav" %>

    <main>

      <%= render "shared/portfolio_masthead" unless logged_in?(:site_admin) %> 

      <%= yield %>

    </main>
    <%= render "shared/portfolio_footer" %>

    <%= alerts %>
  </body>
</html>
