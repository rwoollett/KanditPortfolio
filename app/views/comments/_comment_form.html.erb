<% unless current_user.is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
    <div class="mb-3">
      <%= f.label :content, class: 'form-label' %>
      <%= f.text_area :content, class: 'form-control', rows: 1 %>
      </div>
    <div class="mb-3">
      <%= f.submit "Comment", class: "btn btn-primary"  %>
    </div>

  <% end %>
<% end %>
