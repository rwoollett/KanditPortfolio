<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      <hr/>

      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %>
      <hr/>

      <% if @portfolio_item.technologies.count > 0 %>
        <h3>Technologies Used:</h3> 
        <% @portfolio_item.technologies.each do |t| %>
          <p> <%= t.name %></p>
        <% end %>
      <% end %>

      <div>
        <%#= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin)  %> |
        <%#= button_to "Remove", @portfolio_item, method: :delete %>
      </div>
    </div>
  </div>
</div>

